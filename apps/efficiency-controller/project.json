{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/efficiency-controller/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/efficiency-controller",
        "main": "apps/efficiency-controller/src/main.ts",
        "tsConfig": "apps/efficiency-controller/tsconfig.app.json",
        "assets": ["apps/efficiency-controller/src/assets"],
        "externalDependencies": "none"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/efficiency-controller/src/environments/environment.ts",
              "with": "apps/efficiency-controller/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "efficiency-controller:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "efficiency-controller:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/efficiency-controller/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/efficiency-controller"],
      "options": {
        "jestConfig": "apps/efficiency-controller/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -f ./apps/efficiency-controller/Dockerfile --build-arg POLARIS_APP_TYPE=slo --build-arg POLARIS_APP_NAME=efficiency-controller -t polarissloc/efficiency-controller:latest ."
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "kubectl apply -f ./apps/efficiency-controller/manifests/kubernetes"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
